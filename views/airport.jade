html
  head
    title #{title}
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="shortcut icon" href="/resources/favicon.ico" type="image/x-icon")
    link(rel="icon" href="/resources/favicon.ico" type="image/x-icon")
    link(rel="stylesheet" type="text/css" href="/css/master.css")
    link(rel="stylesheet" type="text/css" href="/css/search.css")
    link(rel="stylesheet" type="text/css" href="/css/airport.css")
    script(type="text/javascript" src="https://maps.google.com/maps/api/js?key=AIzaSyCTrWWBWfYPGFsHvv8sr4tkfpeubCiDIE0")
    script(src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
      crossorigin="anonymous")
    script(type="text/javascript" src="/scripts/search.js")
    script(type="text/javascript" src="/scripts/google-maps.js")
    style(type="text/css").
      .link {
        text-shadow: 1px 1px black;
      }
  body
    div(ng-app="login-app" ng-controller="login-ctrl")
      include login.jade
    div.page
      h1#title.dark #{icao}
      div.main-content
        div.search-container
          div.textbox-container
            input#icaoTxt.sub-textbox(type="text" placeholder="Load Another Airport..")
            div#icaoTT.tooltip.invisible
              div.tooltip-arrow
              span.tooltip-container
          input#searchBtn.button(type="button" value="Search")
        div.split-containers
          div.info.info-side.container
            h3 Airport information
            hr
            | Latitude: 
            span#latitude.field-seperate #{latitude}
            br
            | Longitude: 
            span#longitude.field-seperate #{longitude}
            br
            | City: 
            span.field-seperate #{city}
            br
            | Country: 
            span.field-seperate #{country}
            br
            | Timezone: 
            span.field-seperate #{timezone}
            br
            | Status: 
            span.field-seperate #{status}
          div.map-container.containers
            div#google-map
            input#recenterBtn.button(type="button" value="Recenter")
        div.info.container
          h3 METAR
          hr
          span #{metar}
  
