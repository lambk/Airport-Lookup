link(rel="stylesheet" type="text/css" href="/css/login.css")
span#banner(style="display: none")
div.login-controls
  a.link(v-show="loggedUser == undefined" v-on:click="toggleLoginMenu") Log in
  a.link(v-show="loggedUser != undefined") {{loggedUser}}
  span(style="margin: 0 3px") |
  a.link(v-show="loggedUser == undefined" v-on:click="openSignUpForm") Sign Up
  a.link(v-show="loggedUser != undefined" v-on:click="signOut") Sign Out
  transition(name="fade")
    div#loginMenu(v-show="loginVis")
      div.popup-arrow
      div.popup-content
        form(v-on:submit.prevent="loginSubmit" style="margin: 0")
          h2 Username
          input#username.text-field(type="text" v-model="loginData.username")
          h2(style="margin-top: 15px") Password
          input#password.text-field(type="password" v-model="loginData.password")
          input#login.button(type="submit" value="Login" style="margin-top: 15px")
  div#signUpMenu
    h2(style="font-size: 1.8em") Create Account
    hr(style="color: #aaa")
    div(style="padding: 0 45px")
      form(v-on:submit.prevent="signupSubmit")
        h2(style="margin-top: 15px") Username
        input#newUsername.text-field(type="text" v-model="formData.username")
        div#newUsernameTT
        h2(style="margin-top: 15px") Password
        input#newPassword.text-field(type="password" v-model="formData.password")
        div#newPasswordTT
        input.button.button-cancel(type="button" v-on:click="closeSignUpForm" value="Cancel")
        input#signup.button(type="submit" value="Create" style="margin-top: 20px; margin-left: 30px")
